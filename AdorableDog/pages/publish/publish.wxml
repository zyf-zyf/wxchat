<block wx:if="{{!success}}">
	<view class="area">
		<text class="area-title">我的地址</text>
		<view class="area-info" bindtap="handleSelectAddress">{{address}}</view>
	</view>

	<view class="area">
		<text class="area-title">类型</text>
		<view class="area-info">
			<radio-group class="radio-group" bindchange="handleTypeChange">
	  			<label class="radio">
	    			<radio value="sell" />出售
	  			</label>
	  			<label class="radio">
	    			<radio value="buy" />求购
	  			</label>
			</radio-group>
		</view>
	</view>

	<view class="area">
		<text class="area-title">说明</text>
		<input class="area-info" placeholder="填写您的具体需求" placeholder-class="placeholder" bindinput="handleMessageChange"/>
	</view>

	<view class="area">
		<text class="area-title">联系方式</text>
		<input class="area-info" placeholder="填写您的联系方式" placeholder-class="placeholder" bindinput="handleContactChange"/>
	</view>

	<view class="btn" bindtap="handleSubmit">发布信息</view>
</block>

<block wx:if="{{success}}">
	<include src="success.wxml"/>
</block>